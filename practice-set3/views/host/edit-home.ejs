<%- include('../partials/header', { title: 'Edit Home - Airbnb' }) %>

    <%- include('../partials/navbar', { currentPage: 'edit-home' }) %>

    <main class="bg-gray-50 min-h-screen py-12">
        <div class="max-w-2xl mx-auto px-4">
            <div class="bg-white rounded-lg shadow-lg p-8">
                <header class="mb-8">
                    <h1 class="text-4xl font-bold text-red-600 text-center mb-2">Edit Home</h1>
                    <p class="text-gray-600 text-center">Update your property details</p>
                </header>

                <form action="/host/edit/<%= home.id %>" method="POST">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">House Name</label>
                            <input type="text" name="housename" placeholder="Enter house name" value="<%= home.housename %>" class="w-full px-4 py-2 border border-red-300 rounded-lg focus:outline-none focus:border-red-500" required />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                            <input type="text" name="location" placeholder="Enter house location" value="<%= home.location %>" class="w-full px-4 py-2 border border-red-300 rounded-lg focus:outline-none focus:border-red-500" required />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Photo URL</label>
                            <input type="url" name="photo" placeholder="Enter photo URL" value="<%= home.photo %>" class="w-full px-4 py-2 border border-red-300 rounded-lg focus:outline-none focus:border-red-500" required />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Price per Night ($)</label>
                            <input type="number" name="price" placeholder="Price per night" step="0.01" value="<%= home.price %>" class="w-full px-4 py-2 border border-red-300 rounded-lg focus:outline-none focus:border-red-500" required />
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Rating (1-5)</label>
                            <input type="number" name="rating" placeholder="Rating (1-5)" min="1" max="5" step="0.1" value="<%= home.rating %>" class="w-full px-4 py-2 border border-red-300 rounded-lg focus:outline-none focus:border-red-500" required />
                        </div>
                        
                        <div class="flex gap-4 pt-4">
                            <button type="submit" class="flex-1 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
                                Update Home
                            </button>
                            <a href="/host/homes" class="flex-1 bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-lg transition duration-200 text-center">
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>

<%- include('../partials/footer') %>
