<%- include('../partials/header', { title: 'My Homes - Airbnb Host' }) %>

    <%- include('../partials/navbar', { currentPage: 'host-homes' }) %>

    <main class="max-w-7xl mx-auto px-4 py-12">
        <div class="bg-white rounded-lg shadow-lg p-8 border-l-4 border-red-600 mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-3xl font-bold text-red-600 mb-2">My Homes</h2>
                    <p class="text-gray-600">Manage your properties</p>
                </div>
                <a href="/host/addhome" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg transition">
                    + Add New Home
                </a>
            </div>
        </div>

        <% if (homes && homes.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% homes.forEach(home => { %>
                    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-2xl transition">
                        <!-- Photo Section -->
                        <div class="bg-gray-200 h-48 overflow-hidden flex items-center justify-center">
                            <% if (home.photo) { %>
                                <img src="<%= home.photo %>" alt="<%= home.housename %>" class="w-full h-full object-cover">
                            <% } else { %>
                                <div class="text-center text-gray-500">
                                    <p class="text-lg">üì∑ No Photo</p>
                                </div>
                            <% } %>
                        </div>

                        <!-- Details Section -->
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= home.housename %></h3>
                            <p class="text-gray-600 mb-3">
                                <span class="font-semibold">üìç</span> <%= home.location %>
                            </p>
                            
                            <div class="space-y-2 mb-6 border-t pt-4">
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600">Price:</span>
                                    <span class="text-lg font-bold text-red-600">‚Çπ<%= home.price %></span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600">Rating:</span>
                                    <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded">‚≠ê <%= home.rating %>/5</span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-2">
                                <a href="/host/edit/<%= home.id %>" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition text-center">
                                    Edit
                                </a>
                                <a href="/host/delete/<%= home.id %>" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg transition text-center" onclick="return confirm('Are you sure?')">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="bg-white rounded-lg shadow-lg p-12 text-center">
                <p class="text-xl text-gray-600 mb-6">You haven't added any homes yet</p>
                <a href="/host/addhome" class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-8 rounded-lg inline-block transition">
                    Add Your First Home
                </a>
            </div>
        <% } %>
    </main>

<%- include('../partials/footer') %>
